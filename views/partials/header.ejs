<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Blog Space</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="shortcut icon" href="favicon.jpg" type="image/x-icon">
</head>

<body>
  <div class="container-fluid pt-0 pb-0" style="background-color: #EAE4D5;" data-bs-theme="light">
    <nav class="navbar navbar-expand-lg pt-0 pb-0" style="background-color: #EAE4D5;" data-bs-theme="light">
      <div class="container-fluid">

        <!-- Brand on the left -->
        <p class="navbar-brand h1 fw-bold ms-5 ps-5">BLOG SPACE</p>

        <!-- Mobile toggle button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links on the right -->
        <div class="collapse navbar-collapse me-5 pe-5" id="navbarNavAltMarkup">
          <div class="navbar-nav ms-auto"> <!-- ðŸ‘ˆ pushes links to right -->
            <a class="h5 nav-link fw-bold" href="/">Home</a>
            <a class="h5 nav-link fw-bold" href="/about">About</a>
            <a class="h5 nav-link fw-bold" href="/contact">Contact</a>
            <a class="h5 nav-link fw-bold" href="/compose">Compose</a>
            <li class="nav-item dropdown">
              <a class=" h5 nav-link dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Posts
              </a>
              <ul class="dropdown-menu">
                <% posts.forEach((post)=>{ %>
                  <li><a class="dropdown-item" href="/posts/<%= _.kebabCase(post.title) %>">
                      <%= post.title %>
                    </a></li>
                  <% }) %>
              </ul>
            </li>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <div class="container pt-4">